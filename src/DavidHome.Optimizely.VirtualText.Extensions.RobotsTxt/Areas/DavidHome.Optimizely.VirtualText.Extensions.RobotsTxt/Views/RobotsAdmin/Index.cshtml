@model RobotsTxtIndexViewModel

<section class="epi-padding">
    <h1 class="epi-u-marginBottomSmall">Robots.txt Indexing Settings</h1>
    <p class="epi-u-marginBottomMedium">Current environment: <strong>@Model.CurrentEnvironment</strong></p>

    <table class="epi-table epi-u-marginBottomMedium" style="width:100%; max-width: 960px;">
        <thead>
        <tr>
            <th>Environment</th>
            <th>Source</th>
            <th>Directives</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var environment in Model.Environments)
        {
            <tr>
                <td>
                    @environment.EnvironmentName
                    @if (environment.IsCurrent)
                    {
                        <span class="epi-badge">Current</span>
                    }
                </td>
                <td>@(environment.IsExplicit ? "Azure Table" : "Default policy")</td>
                <td>
                    @if (Model.CanEdit)
                    {
                        <form method="post" asp-action="Save" class="epi-u-displayInlineBlock">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="EnvironmentName" value="@environment.EnvironmentName" />
                            <label class="epi-form__label" style="display:flex;flex-direction:column;align-items:flex-start;gap:8px;max-width:520px;">
                                <span>Comma-separated directives. Optional user-agent format (for X-Robots-Tag header): googlebot: nofollow. Meta tag output uses only generic robots directives.</span>
                                <input type="text"
                                       class="epi-input"
                                       style="width:100%;"
                                       name="RobotsDirective"
                                       value="@environment.RobotsDirective" />
                            </label>
                            <button type="submit" class="epi-button epi-button--primary epi-u-marginTopSmall">Save</button>
                        </form>
                    }
                    else
                    {
                        <span>@(string.IsNullOrWhiteSpace(environment.RobotsDirective) ? "None (indexing allowed)" : environment.RobotsDirective)</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(environment.RobotsDirective))
                    {
                        <span class="epi-badge">Will output: @environment.RobotsDirective</span>
                    }
                    else
                    {
                        <span class="epi-badge">Indexing allowed</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</section>
